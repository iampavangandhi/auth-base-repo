{
  "name": "auth-base-repo",
  "version": "1.0.0",
  "description": "A base repo in nodejs for auth purposes",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "doc": "jsdoc -c ./config/jsdoc.json",
    "linter": "eslint  ./controllers/. ./middleware/. ./models/. ./routes/. server.js",
    "add-all": "git add ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run doc && npm run add-all",
      "pre-push": "npm run linter"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AssaultKoder95/auth-base-repo.git"
  },
  "keywords": [
    "auth",
    "jwt",
    "nodejs"
  ],
  "author": "Pavan Gandhi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AssaultKoder95/auth-base-repo/issues"
  },
  "homepage": "https://github.com/AssaultKoder95/auth-base-repo#readme",
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mongoose": "^5.10.6",
    "morgan": "^1.10.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "jsdoc-http-plugin": "^0.3.2",
    "nodemon": "^2.0.4"
  }
}
